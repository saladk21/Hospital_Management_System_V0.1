<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/Column_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/patName_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Name"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/Column_id_txt"
            app:layout_constraintStart_toEndOf="@+id/Column_id_txt"
            app:layout_constraintTop_toTopOf="@+id/Column_id_txt"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/patGender_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:text="Gender"
            app:layout_constraintStart_toEndOf="@+id/Column_id_txt"
            app:layout_constraintTop_toBottomOf="@+id/patName_txt"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/patAge_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:text="Age"
            app:layout_constraintStart_toEndOf="@+id/patGender_txt"
            app:layout_constraintTop_toBottomOf="@+id/patName_txt"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/patID_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:text="ID"
            app:layout_constraintStart_toEndOf="@+id/Column_id_txt"
            app:layout_constraintTop_toTopOf="@+id/Column_id_txt"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/patStatues_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="2dp"
            android:text="Statues"
            app:layout_constraintBottom_toBottomOf="@+id/Column_id_txt"
            app:layout_constraintStart_toEndOf="@+id/Column_id_txt"
            app:layout_constraintTop_toBottomOf="@+id/patID_txt"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/patIllness_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:text="Illness
"
            app:layout_constraintBottom_toBottomOf="@+id/Column_id_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/Column_id_txt"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/patMed_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:text="Medicine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/patIllness_txt"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/addMedButton"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginEnd="2dp"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            app:flow_horizontalAlign="center"
            app:layout_constraintBottom_toBottomOf="@+id/Column_id_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/Column_id_txt"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>