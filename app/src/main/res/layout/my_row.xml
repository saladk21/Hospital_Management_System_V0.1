<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/Column_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/pName_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Name"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/Column_id_txt"
            app:layout_constraintStart_toEndOf="@+id/Column_id_txt"
            app:layout_constraintTop_toTopOf="@+id/Column_id_txt"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/pID_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:text="ID"
            app:layout_constraintBottom_toBottomOf="@+id/Column_id_txt"
            app:layout_constraintStart_toEndOf="@+id/Column_id_txt"
            app:layout_constraintTop_toTopOf="@+id/Column_id_txt"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/docID_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:text="Doctor ID"
            app:layout_constraintBottom_toBottomOf="@+id/Column_id_txt"
            app:layout_constraintStart_toEndOf="@+id/Column_id_txt"
            app:layout_constraintTop_toTopOf="@+id/Column_id_txt"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/appDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Date"
            app:layout_constraintBottom_toBottomOf="@+id/Column_id_txt"
            app:layout_constraintEnd_toStartOf="@+id/appTime_txt"
            app:layout_constraintTop_toTopOf="@+id/Column_id_txt"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/appTime_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Time"
            app:layout_constraintBottom_toBottomOf="@+id/Column_id_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/Column_id_txt" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>